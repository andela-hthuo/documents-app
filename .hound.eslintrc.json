{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": "airbnb-base",
  "rules": {
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "no-param-reassign": ["error", { "props": false }],
    "no-unused-expressions": "off",
    "max-len": ["error", 80, { "ignoreUrls": true }],
    "radix": ["error", "as-needed"],
    "import/no-unresolved": "off"
  }
}
