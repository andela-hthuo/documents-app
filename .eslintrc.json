{
  "env": {
    "mocha": true
  },
  "extends": "airbnb",
  "plugins": [
      "react"
  ],
  "rules": {
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "no-param-reassign": ["error", { "props": false }],
    "no-unused-expressions": "off",
    "max-len": ["error", 80, { "ignoreUrls": true }],
    "radix": ["error", "as-needed"]
  },
  "settings": {
    "import/resolver": {
      "webpack" : {
        "config": "webpack.dev.config.js"
      }
    }
  }
}
