{
  "name": "documents-app",
  "version": "1.0.0",
  "description": "Document Management App",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "webpack -p --config webpack.prod.config.js",
    "prestart": "npm run build",
    "start": "node index.js",
    "start-dev": "nodemon -w server -w index.js -w webpack.base.config.js -w webpack.dev.config.js index.js",
    "test": "NODE_ENV=testing mocha \"tests/**/*spec.js\"",
    "lint": "eslint client server index.js --fix",
    "cover": "NODE_ENV=testing istanbul cover _mocha -- \"tests/**/*spec.js\"",
    "codeclimate": "npm run cover && codeclimate-test-reporter < coverage/lcov.info",
    "codecov": "npm run cover && cat coverage/lcov.info | codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andela-hthuo/documents-app.git"
  },
  "author": "Humphrey Thuo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andela-hthuo/documents-app/issues"
  },
  "homepage": "https://github.com/andela-hthuo/documents-app#readme",
  "dependencies": {
    "async": "^2.0.0-rc.6",
    "bcrypt": "^0.8.7",
    "body-parser": "^1.15.1",
    "express": "^4.13.4",
    "jsonwebtoken": "^7.0.1",
    "mongoose": "^4.5.0",
    "mongoose-deep-populate": "^3.0.0",
    "morgan": "^1.7.0",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.6.0",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "superagent": "^2.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.3.3",
    "codecov.io": "^0.1.6",
    "css-loader": "^0.23.1",
    "eslint": "^2.12.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-import-resolver-webpack": "^0.4.0",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.5.5",
    "eslint-plugin-react": "^5.2.2",
    "istanbul": "^0.4.4",
    "mocha": "^2.5.3",
    "nodemon": "^1.9.2",
    "react-hot-loader": "^1.3.0",
    "redux-devtools": "^3.3.1",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.0.11",
    "redux-logger": "^2.6.1",
    "style-loader": "^0.13.1",
    "supertest": "^1.2.0",
    "webpack": "^1.13.1",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.12.1"
  },
  "engines": {
    "node": "6.2.1",
    "npm": "3.9.3"
  }
}
